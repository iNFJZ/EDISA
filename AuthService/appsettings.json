{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=auth_db;Username=postgres;Password=123456",
    "Redis": "redis:6379"
  },
  "JwtSettings": {
    "Key": "thisismyverystrongsecretkey1234567890",
    "Issuer": "EDISA",
    "Audience": "EDISA",
    "ExpiresInMinutes": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft": "Warning",
      "System": "Warning"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Elasticsearch"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/edisa-.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "retainedFileCountLimit": 30
        }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://elasticsearch:9200",
          "indexFormat": "logs-edisa-auth-{0:yyyy.MM.dd}",
          "autoRegisterTemplate": true,
          "autoRegisterTemplateVersion": "ESv8",
          "numberOfShards": 1,
          "numberOfReplicas": 0,
          "bufferFileSizeLimitBytes": 5242880,
          "period": 2,
          "batchPostSizeLimit": 50,
          "batchPeriodLimit": 2,
          "failureCallback": "e => Console.WriteLine(\"Unable to submit event {0} to Elasticsearch: {1}\", e.MessageTemplate, e.Exception)"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId", "WithEnvironmentUserName"]
  },
  "Elasticsearch": {
    "Url": "http://localhost:9200",
    "IndexFormat": "logs-edisa-auth-{0:yyyy.MM.dd}",
    "Username": "",
    "Password": "",
    "EnableSsl": false,
    "NumberOfShards": 2,
    "NumberOfReplicas": 1
  },
  "OpenTelemetry": {
    "ServiceName": "EDISA-AuthService",
    "ServiceVersion": "1.0.0",
    "ServiceNamespace": "EDISA",
    "ServiceInstanceId": "auth-service-001",
    "EnableConsoleExporter": true,
    "EnableAspNetCoreInstrumentation": true,
    "EnableHttpClientInstrumentation": true,
    "EnableSqlClientInstrumentation": true,
    "Jaeger": {
      "Enabled": false,
      "AgentHost": "jaeger",
      "AgentPort": 6831
    },
    "Zipkin": {
      "Enabled": false,
      "Endpoint": "http://zipkin:9411/api/v2/spans"
    },
    "Otlp": {
      "Enabled": true,
      "Endpoint": "http://localhost:4317"
    }
  },
  "Application": {
    "Name": "EDISA Auth Service",
    "Version": "1.0.0",
    "Environment": "Development"
  },
  "AllowedHosts": "*",
  "RabbitMQ": {
    "HostName": "rabbitmq",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/"
  },
  "AuthPolicy": {
    "MaxFailedLoginAttempts": 3,
    "AccountLockMinutes": 5,
    "ResetPasswordTokenExpiryMinutes": 15
  },
  "GoogleAuth": {
    "ClientId": "157841978934-fmgq60lshk9iq65s7h37mc7ta78m8nu3.apps.googleusercontent.com",
    "ClientSecret": "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"
  },
  "HunterApiKey": "22cc5029481a4e19865463acbfc2a7977e18cdf9",
  "Frontend": {
